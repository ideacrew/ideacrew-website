---
import { Tag as TagIcon } from "@lucide/astro";

export interface Props {
  tag: string;
  size?: "sm" | "lg";
}

const { tag, size = "sm" } = Astro.props;
---

<li
  class={`inline-block ${
    size === "sm" ? "my-1 underline-offset-4" : "my-3 mx-1 underline-offset-8"
  }`}
>
  <a
    href={`/tags/${tag}/`}
    transition:name={tag}
    class={`${size === "sm" ? "text-sm" : "text-lg"} group hover:text-skin-accent relative underline decoration-dashed hover:-top-0.5 focus-visible:p-1 inline-flex items-center gap-1`}
  >
    <TagIcon
      class={`${size === "sm" ? "h-3 w-3 md:h-4 md:w-4" : "h-4 w-4 md:h-5 md:w-5"} text-skin-base group-hover:text-skin-accent opacity-80`}
    />
    <span>{tag}</span>
  </a>
</li>
