---
import { getCollection } from "astro:content";
import Layout from "@/layouts/Layout.astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import Breadcrumbs from "@/components/Breadcrumbs.astro";

import { getEntry } from "astro:content";
import LinkButton from "@/components/LinkButton.astro";
const siteConfig = await getEntry("site", "config");
const SITE = siteConfig!.data;

export async function getStaticPaths() {
  const careers = await getCollection("careers");
  return careers.map(career => ({
    params: { slug: career.slug },
    props: { career },
  }));
}

const { career } = Astro.props;
const { Content } = await career.render();
// Build application URL from frontmatter, allowing {{title}} substitution
const defaultMailto = `mailto:info@ideacrew.com?subject=${encodeURIComponent(
  `Application for ${career.data.title} at IdeaCrew, Inc.`
)}`;
const applicationHref = (career.data.applicationUrl || defaultMailto).replace(
  "{{title}}",
  encodeURIComponent(career.data.title)
);
---

<Layout
  title={`${career.data.title} | ${SITE.siteName}`}
  description={career.data.description}
>
  <Header />
  <Breadcrumbs careerName={career.data.title} />
  <main id="main-content">
    <article class="mx-auto max-w-[960px] px-4 py-16">
      <div class="mb-8">
        <h1 class="font-domine mb-4 text-[36px] font-normal text-[#0D2B46]">
          {career.data.title}
        </h1>
        <p class="text-sm text-[#666]">
          {career.data.type} Â· {career.data.location}
          <br />
          Posted: {
            career.data.postedDate.toLocaleDateString("en-US", {
              year: "numeric",
              month: "long",
              day: "numeric",
            })
          }
        </p>
      </div>

      <div class="flex flex-col-reverse md:flex-row md:gap-8">
        <div class="md:w-3/4">
          <div class="prose max-w-none">
            <Content />
          </div>

          <div class="mt-8">
            <h3 class="mb-2 text-[24px] font-bold">
              Job Type: {career.data.type}
            </h3>
            <h4 class="mb-8 font-semibold">
              Salary: ${career.data.salary.salaryLow} to ${
                career.data.salary.salaryHigh
              } / year
            </h4>

            <LinkButton
              href={applicationHref}
              className="w-full sm:w-auto"
              variant="primary"
            >
              Apply Now
            </LinkButton>
          </div>
        </div>

        <div class="mb-8 md:mb-0 md:w-1/4">
          <div class="sticky top-8">
            <LinkButton
              href={applicationHref}
              className="w-full"
              variant="primary"
            >
              Apply Now
            </LinkButton>
          </div>
        </div>
      </div>
    </article>
  </main>
</Layout>
<Footer />
